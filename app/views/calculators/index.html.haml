- provide(:title, "Keto kalkulator")

.row

  %h1 Keto kalkulator

  #caloriesExpenditureSection

    %p Molimo Vas da uneste podatke neophodne za određivanje kalorijskog deficita.

    = form_tag("", method: "", id: "calculateCalories") do
      = label_tag :visina, "Visina (cm)"
      = select_tag :visina, options_for_select((140..210).map { |n| [n, n] }, selected: 180)
    
      = label_tag :težina, "Težina (kg)"
      = select_tag :težina, options_for_select((40..130).map { |n| [n, n] }, selected: 80)
    
      = label_tag :godine
      = select_tag :godine, options_for_select((18..80).map { |n| [n, n] }, selected: 30)
    
      = label_tag :pol
      = select_tag :pol, options_for_select([ ["muški", 0], ["ženski", 1] ])
    
      = label_tag :nivo_aktivnosti
      = select_tag :nivo_aktivnosti, options_for_select([ ["uglavnom sedenje", 1.15], 
                                                          ["slabo aktivan", 1.3],
                                                          ["umereno aktivan", 1.5],
                                                          ["vrlo aktivan", 1.7],
                                                          ["ekstremno aktivan", 2.0] ],
                                                          selected: 1.5)
                                        
      = label_tag :deficit
      = select_tag :deficit, options_for_select([ ["10%", 0.1], ["20%", 0.2], ["30%", 0.3] ])

      = button_tag "Izračunaj!"

  #menu.hide
    .panel.callout.radius
      %p#calculatedDeficit

    = label_tag :food_item, 'Izaberi namirnicu'
    = text_field_tag 'food_item'

%link{ rel: "stylesheet", href: "https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css" }
%script{ src: "https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js" }